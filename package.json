{
  "name": "shopping-cart-graphql",
  "version": "1.0.0",
  "description": "a shopping cart that communicates with any frontend via graphql and supports both mongodb for remote data storing and fetching and localstorage",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon -r tsconfig-paths/register -r ts-node ./src/server.ts",
    "start": "node ./src/server.ts",
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "pm2": "pm2 start npm -- run start --attach --watch",
    "pm2:dev": "pm2 start npm -- run dev --attach --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@typegoose/typegoose": "^8.2.0",
    "apollo-server-cache-redis": "^3.1.0",
    "apollo-server-core": "^3.3.0",
    "apollo-server-express": "^3.3.0",
    "class-validator": "^0.13.1",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.5.2",
    "graphql-playground-middleware-express": "^1.7.22",
    "ioredis": "^4.27.9",
    "mongoose": "^6.0.4",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^3.11.0",
    "tscpaths": "0.0.9",
    "type-graphql": "^1.1.1",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/ioredis": "^4.27.2",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^16.7.10",
    "nodemon": "^2.0.12",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.2",
    "loadtest": "*"
  }
}